@model Common.Order

@{
    ViewBag.Title = "AboutProduct";
}

<h2>AboutProduct</h2>

<div>
    <h4>Product</h4>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2">Photo</label>
        <div class="col-md-10">
            <img src="/Content/Products/@Model.ProductId@Model.Product.ImggType" />
        </div>
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Product.Cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Cost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Product.About)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.About)
        </dd>

    </dl>
</div>

@if (Request.UrlReferrer != null)
{
    <p>
        <a href="@Request.UrlReferrer.AbsolutePath" class = "btn btn-default" >Back</a>
    </p>
}
else
{
    <p>
        @Html.ActionLink("Back to Orders", "Orders", new { }, new { @class = "btn btn-default" })
    </p>

}
